<h1> <%=@food_truck.name %> </h1>
<ul>
  <h3>
    <%=@food_truck.avg_rating%>
  </h3>
  <p>
  Primary Location: <%=@food_truck.location%>
  </p>

  <p><h5>
    <%=@food_truck.description%>
  </p></h5>
</ul>

<h3>User Reviews</h3>
<ul>
  <% @reviews.each do |review| %>
  <li>
      rating: <%= review.rating %> stars - <%= review.body %>
  </li>
  <% end %>
</ul>

<%= link_to "Back", food_trucks_path, class: "button success" %>
